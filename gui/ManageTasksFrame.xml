<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<GUI onOpen="onOpen" onClose="onClose" onCreate="onCreate">
    <GuiElement profile="newLayer" />
    <Bitmap profile="dialogFullscreenBg" />
    <GuiElement profile="dialogBg" size="900px 800px">
        <ThreePartBitmap profile="fs25_dialogBgMiddle" />
        <ThreePartBitmap profile="fs25_dialogBgTop" />
        <ThreePartBitmap profile="fs25_dialogBgBottom" />
        <GuiElement profile="fs25_dialogContentContainer">
            <Animation profile="fs25_dialogLoading" id="iconLoadingElement" />
            <Text profile="dialogTitle" text="$l10n_ui_header_manage_tasks" position="0px -30px" />

            <MultiTextOption profile="fs25_subCategorySelectorTabbed" id="groupSelector" position="0px -80px" size="450px 50px" onClick="OnGroupSelectChange" >
                <Text profile="fs25_multiTextOptionText" name="text" />
            </MultiTextOption>

            <GuiElement id="tasksContainer">
                <GuiElement profile="fs25_statisticsHeaderBox">
                    <Button profile="ingameMenuTodoListHeader" position="60px -145px" text="$l10n_ui_header_detail" handleFocus="false" />
                    <Button profile="ingameMenuTodoListHeader" position="540px -145px" text="$l10n_ui_header_due" handleFocus="false" />
                    <Button profile="ingameMenuTodoListHeader" position="690px -145px" text="$l10n_ui_header_priority" handleFocus="false" />
                </GuiElement>

                <SmoothList id="tasksTable" profile="ingameMenuTodoListTable" position="40px -180px" size="750px 520px">
                    <ListItem profile="ingameMenuTodoListListItem">
                        <Text profile="ingameMenuTodoListRowCellLeft" position="20px 0px" size="480px 32px" name="detail"/>
                        <Text profile="ingameMenuTodoListRowCellLeft" position="500px 0px" size="150px 32px" name="due"/>
                        <Text profile="ingameMenuTodoListRowCellRight" position="650px 0px" size="60px 32px" name="priority"/>
                    </ListItem>
                </SmoothList>

                <ThreePartBitmap profile="todoListGroupsSliderBox" position="-20px -140px" size="6px 520px">
                    <Slider profile="fs25_listSlider" dataElementId="tasksTable" />
                </ThreePartBitmap>
            </GuiElement>

            <GuiElement id="noTasksContainer">
                <Text profile="dialogTitle" text="$l10n_ui_no_groups_exist" position="0px -75px" />
            </GuiElement>

        </GuiElement>
        <BoxLayout profile="fs25_dialogButtonBox">
            <Button profile="buttonCancel" text="$l10n_ui_btn_delete" onClick="onClickDelete" />
            <!-- <Button profile="buttonActivate" text="$l10n_ui_btn_copy" onClick="onClickCopy" /> -->
            <Button profile="buttonOK" text="$l10n_ui_btn_add_task" onClick="onClickAdd" />            
            <Button profile="buttonBack" text="$l10n_ui_btn_close" onClick="onClickBack" />
        </BoxLayout>
    </GuiElement>
</GUI>